#include <stdio.h>

int main()
{
    int x[3][3],i,j;
    int *ptr;
    ptr=&x[i][j];
for(i=0;i<3;i++)
  {
      for(j=0;j<3;j++)
      {
	      printf("element - [%d],[%d] : ",i,j);
	      scanf("%d",&x[i][j]);
      }
  }  
 
 printf("\nThe matrix is : \n");
  for(i=0;i<3;i++)
  {
      printf("\n");
      for(j=0;j<3;j++)
           printf("%d\t",x[i][j]);
  }
 printf("\n\n");
    return 0;
}
